@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown">
                @{
                    string userphoto = Session["userpic"] as string;
                }
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @if (userphoto != null)
                    {
                        <img class='img-circle' width='50' height='50' src="~/Content/userphotos/@userphoto" style="border-radius: 50%;"/>
                    }
                    else
                    {
                        <img class='img-circle' width='50' height='50' src="~/Content/images/userpic.png" style="border-radius: 50%;"/>

                    }
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="navbarDropdown">
                    <p class="dropdown-item"><b>@Session["username"]</b></p>
                    <div class="dropdown-divider"></div>
                    @Html.ActionLink("Your Profile", "profile", "Project", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })
                    @Html.ActionLink("Create Project", "createproject", "Project", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })

                    <div class="dropdown-divider"></div>
                    @Html.ActionLink("Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                </div>
            </li>
            @*<li class="nav-item pr-2">
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})
                </li>*@
            @*<li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
        </ul>
                        }
                    }
                    else
                    {
    <ul class="navbar-nav">
        <li class="nav-item pr-2">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>
        <li class="nav-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})</li>
    </ul>
}
